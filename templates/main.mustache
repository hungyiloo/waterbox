<h1 id="logo">
  <img src="logo.svg"/>
  Water<span class="muted">Box</span>
</h1>

<div style="display: flex; align-items: center; flex-wrap: wrap; margin-bottom: 1rem;">
  <pre style="margin: 0 0.5rem 0.5rem 0;">SELECT * FROM fruits WHERE</pre>
  <input id="condition-input"
         type="text"
         placeholder="e.g. description LIKE '%danger%'"
         size="30"
         value="{{filterCondition}}"
         autofocus
         autocomplete="off"
         style="margin: 0 0.5rem 0.5rem 0;"/>
  <button id="query-btn"
          style="margin: 0 0.5rem 0.5rem 0;">Query âš¡</button>
  <button id="reset-btn">Reset</button>
</div>
<table id="fruit-table">
  <thead>
    <tr>
      <th width="40">ID</th>
      <th width="100">Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#fruits}}
      <tr>
        <td>{{id}}</td>
        <td>{{name}}</td>
        <td>{{description}}</td>
      </tr>
    {{/fruits}}
    {{^fruits}}
      <tr>
        <td colspan="3" style="text-align: center;">
          <i>Oops...nothing matches your filter.</i>
        </td>
      </tr>
    {{/fruits}}
  </tbody>
</table>
<p>
  Download the <a href="db.sqlite">SQLite database</a> to see the data that powers the list above.
</p>
